{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["dom", "dom.iterable", "ES2024"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "paths": {
      "@shared/*": ["./packages/shared/src/*"]
    }
  },
  "include": ["packages/**/*", "e2e/**/*"],
  "exclude": ["node_modules", "referendes", "scripts", ".storybook"]
}
