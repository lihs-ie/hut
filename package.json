{
  "name": "hut",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "bash ./scripts/setup.sh",
    "dev:local": "bash ./scripts/dev-local.sh",
    "dev": "pnpm -r --parallel dev",
    "dev:reader": "pnpm --filter @hut/reader dev",
    "dev:admin": "pnpm --filter @hut/admin dev",
    "build": "pnpm -r build",
    "lint": "eslint packages/",
    "test": "vitest run",
    "e2e": "playwright test",
    "storybook": "storybook dev -p 6006 -c .storybook",
    "seed": "pnpm --filter @hut/shared seed",
    "emulator:start": "docker compose -f packages/shared/docker/firebase/docker-compose.yml up",
    "emulator:start:detach": "docker compose -f packages/shared/docker/firebase/docker-compose.yml up -d",
    "emulator:stop": "docker compose -f packages/shared/docker/firebase/docker-compose.yml down",
    "emulator:build": "docker compose -f packages/shared/docker/firebase/docker-compose.yml build --no-cache",
    "emulator:logs": "docker compose -f packages/shared/docker/firebase/docker-compose.yml logs -f",
    "emulator:clean": "rm -rf packages/shared/docker/firebase/data/*"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-onboarding": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/nextjs-vite": "^10.1.11",
    "@types/node": "^20.19.27",
    "@types/react": "^19.2.7",
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "eslint-plugin-storybook": "^0.12.0",
    "storybook": "^10.1.11",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
