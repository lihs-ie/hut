{
  "name": "hut",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:reader": "pnpm --filter @hut/reader dev",
    "dev:admin": "pnpm --filter @hut/admin dev",
    "build": "pnpm -r build",
    "lint": "eslint packages/",
    "test": "vitest run",
    "storybook": "pnpm --filter @hut/shared storybook"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-vitest": "^10.1.11",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/browser-playwright": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "eslint-plugin-storybook": "^0.12.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
